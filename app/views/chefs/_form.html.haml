= render  "shared/errors", obj: @chef

.row
  .well.col-xs-8.col-xs-offset-2
    = form_for @chef do |f|
      = f.label :chefname
      = f.text_field :chefname

      = f.label :email
      = f.email_field :email

      = f.label :password
      = f.password_field :password

      = f.submit(@chef.new_record? ? 'Register' : 'Update Profile', class: "btn btn-success")

